    <root level="INFO">
        <if condition='isDefined("NAIS_CLUSTER_NAME")'>
            <then>
                <appender-ref ref="STDOUT"/>
            </then>
            <else>
                <appender-ref ref="CONSOLE"/>
            </else>
        </if>
    </root>

    <logger name="no.nav" level="DEBUG"/>
    <logger name="ktor.application" level="DEBUG"/>
    <logger name="io.ktor" level="TRACE"/>

</configuration>